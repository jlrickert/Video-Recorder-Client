{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "lib": ["es6", "es5", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
